<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/viewdocument_img_avatardocument"
        android:layout_width="@dimen/viewdocument_img_avatardocument_with"
        android:layout_height="@dimen/viewdocument_img_avatardocument_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewdocument_tv_namedocument"
        style="@style/TextSmallGrayCommon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/viewdocument_tvnamedocument_marginstart"
        android:text="@string/viewdocument_tvnamedocument_exp"
        app:layout_constraintLeft_toRightOf="@+id/viewdocument_img_avatardocument"
        app:layout_constraintRight_toLeftOf="@+id/viewdocument_img_downloaddocument"
        app:layout_constraintTop_toTopOf="@+id/viewdocument_img_avatardocument" />

    <ImageView
        android:id="@+id/viewdocument_img_downloaddocument"
        android:layout_width="@dimen/viewdocument_img_downloaddocument_with"
        android:layout_height="@dimen/viewdocument_img_downloaddocument_height"
        app:layout_constraintBottom_toBottomOf="@id/viewdocument_img_avatardocument"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/viewdocument_img_avatardocument" />

    <TextView
        android:id="@+id/viewdocument_tv_decorationline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/viewdocument_tv_decorationline_height"
        android:layout_marginBottom="@dimen/viewdocument_tv_decorationline_marginbottom"
        android:layout_marginTop="@dimen/viewdocument_tv_decorationline_margintop"
        android:background="@color/colorDecorationLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewdocument_img_avatardocument" />
</android.support.constraint.ConstraintLayout>