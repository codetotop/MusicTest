<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imgAvatarDocument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_word"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/tvNameDocument"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextSmallGrayCommon"
        android:text="@string/viewdocument_tvnamedocument_exp"
        app:layout_constraintLeft_toRightOf="@+id/imgAvatarDocument"
        app:layout_constraintRight_toLeftOf="@+id/imgDownloadDocument"
        app:layout_constraintTop_toTopOf="@+id/imgAvatarDocument"
        android:layout_marginStart="@dimen/viewdocument_tvnamedocument_marginleft"
        />
    <ImageView
        android:id="@+id/imgDownloadDocument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_download"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgAvatarDocument"
        app:layout_constraintBottom_toBottomOf="@id/imgAvatarDocument"
        />
    <TextView
        android:id="@+id/tvDecorationLineDocument"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDecorationLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgAvatarDocument"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp"
        />
</android.support.constraint.ConstraintLayout>