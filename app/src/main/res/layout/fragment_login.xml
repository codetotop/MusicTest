<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.gem.mpi.widget.FormInputView
        android:id="@+id/formInputUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:imgevent_visibility="false"
        app:imgevent_source="@drawable/ic_clear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tvlabel_name="@string/label_username_exp"/>

    <com.gem.mpi.widget.FormInputView
        android:id="@+id/formInputPassWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:imgevent_source="@drawable/ic_un_view"
        app:imgevent_visibility="false"
        app:layout_constraintTop_toBottomOf="@+id/formInputUserName"
        app:tvlabel_name="@string/label_password_exp"/>
</android.support.constraint.ConstraintLayout>