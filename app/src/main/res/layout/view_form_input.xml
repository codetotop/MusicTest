<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tvlabel_size"
        android:textColor="@color/viewforminput_tvlabel_textcolor"
        android:text="@string/label_username_exp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/edtvalue_size"
        android:textColor="@color/viewforminput_edtvalue_textcolor"
        android:layout_marginLeft="@dimen/edtvalue_marginleft"
        android:layout_marginRight="@dimen/edtvalue_marginright"
        android:text="@string/value_username_exp"
        android:paddingRight="@dimen/edtvalue_paddingright"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLabel" />

    <ImageView
        android:id="@+id/imgEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLabel"
        app:layout_constraintBottom_toBottomOf="@+id/edtValue"
        android:layout_marginBottom="@dimen/imgevent_marginbottom"
        />

</android.support.constraint.ConstraintLayout>