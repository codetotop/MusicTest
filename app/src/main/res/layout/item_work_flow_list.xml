<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/TextSmallBlackCommon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/itemworkflowlist_tvTitle_exp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imgStatus"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/itemworkflowlist_imgstatus_marginleft"
        android:background="@drawable/ic_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvTitle"
        app:layout_constraintTop_toTopOf="@+id/tvTitle" />

    <TextView
        android:id="@+id/tvDocSymbol"
        style="@style/TextSmallSlateGreyCommon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/itemworkflowlist_tvdocsymbol_margintop"
        android:text="@string/itemworkflowlist_tvdocsymbol_exp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <TextView
        android:id="@+id/tvNewIdea"
        style="@style/TextSmallSlateGreyCommon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/itemworkflowlist_tvnewidea_margintop"
        android:text="@string/itemworkflowlist_tvnewidea_exp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDocSymbol" />

    <TextView
        android:id="@+id/tvDuration"
        style="@style/TextSmallSlateGreyCommon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/itemworkflowlist_tvduration_margintop"
        android:text="@string/itemworkflowlist_tvduration_exp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNewIdea" />

    <TextView
        android:id="@+id/tvDecorationLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tvdecorationline_height"
        android:layout_marginTop="@dimen/tvdecorationline_margintop"
        android:background="@color/tvdecorationline_backgoundcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDuration"
        />

</android.support.constraint.ConstraintLayout>