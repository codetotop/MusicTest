<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemhandleidea_tv_title"
        style="@style/TextSmallBlackBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/itemworkfollowlist_tvTitle_exp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/itemhandleidea_img_status"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/itemhandleidea_img_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/itemworkfollowlist_imgstatus_marginstart"
        android:background="@drawable/ic_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemhandleidea_tv_title"
        app:layout_constraintTop_toTopOf="@+id/itemhandleidea_tv_title" />

    <TextView
        android:id="@+id/itemhandleidea_tv_docsymbol"
        style="@style/TextSmallSlateGreyCommon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/itemworkfollowlist_tvdocsymbol_margintop"
        android:text="@string/itemworkfollowlist_tvdocsymbol_exp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemhandleidea_tv_title" />

    <TextView
        android:id="@+id/itemhandleidea_tv_newidea"
        style="@style/TextSmallSlateGreyCommon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/itemworkfollowlist_tvnewidea_margintop"
        android:text="@string/itemworkfollowlist_tvnewidea_exp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemhandleidea_tv_docsymbol" />

    <TextView
        android:id="@+id/itemhandleidea_tv_duration"
        style="@style/TextSmallSlateGreyCommon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/itemworkfollowlist_tvduration_margintop"
        android:text="@string/itemworkfollowlist_tvduration_exp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemhandleidea_tv_newidea" />

    <TextView
        android:id="@+id/itemhandleidea_tv_decorationline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/workfollowlist_tvdecorationline_height"
        android:layout_marginTop="@dimen/workfollowlist_tvdecorationline_margintop"
        android:background="@color/tvdecorationline_backgoundcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemhandleidea_tv_duration" />

</android.support.constraint.ConstraintLayout>