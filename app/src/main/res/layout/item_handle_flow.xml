<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemhandleflow_tv_namestaff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itemhandleflow_tvnamestaff_exp"
        style="@style/TextMediumBlackBold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemhandleflow_tv_duty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itemhandleflow_tvduty_exp"
        style="@style/TextSmallBlackCommon"
        app:layout_constraintLeft_toRightOf="@id/itemhandleflow_tv_namestaff"
        app:layout_constraintTop_toTopOf="@id/itemhandleflow_tv_namestaff"
        app:layout_constraintBottom_toBottomOf="@id/itemhandleflow_tv_namestaff"
        android:layout_marginStart="@dimen/itemhandleflow_tvduty_marginleft"
        />
    <TextView
        android:id="@+id/itemhandleflow_tv_desc_workflow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/itemhandleflow_tv_namestaff"
        style="@style/TextSmallBlackCommon"
        android:text="@string/itemhandleflow_tvdescworkflow_exp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/itemhandleflow_tvdescworkflow"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/itemhandleflow_tv_timehandle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextSmallestGrayCommon"
        android:text="@string/itemhandleflow_tvtimehandle_exp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemhandleflow_tv_desc_workflow"
        android:layout_marginTop="@dimen/itemhandleflow_tvtimehandle_margintop"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/itemhandleflow_tv_decorationline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDecorationLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemhandleflow_tv_timehandle"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp"
        />
</android.support.constraint.ConstraintLayout>