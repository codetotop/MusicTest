<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvNameStaff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itemhandleflow_tvnamestaff_exp"
        style="@style/TextMediumBlackCommon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDuty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itemhandleflow_tvduty_exp"
        style="@style/TextSmallBlackCommon"
        app:layout_constraintLeft_toRightOf="@id/tvNameStaff"
        app:layout_constraintTop_toTopOf="@id/tvNameStaff"
        app:layout_constraintBottom_toBottomOf="@id/tvNameStaff"
        android:layout_marginLeft="@dimen/itemhandleflow_tvduty_marginleft"
        />
    <TextView
        android:id="@+id/tvDescWorkFlow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvNameStaff"
        style="@style/TextSmallBlackCommon"
        android:text="@string/itemhandleflow_tvdescworkflow_exp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/itemhandleflow_tvdescworkflow"
        />

    <TextView
        android:id="@+id/tvTimeHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextSmallestGrayCommon"
        android:text="@string/itemhandleflow_tvtimehandle_exp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescWorkFlow"
        android:layout_marginTop="@dimen/itemhandleflow_tvtimehandle_margintop"
        />
</android.support.constraint.ConstraintLayout>