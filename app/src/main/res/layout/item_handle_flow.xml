<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvNameStaff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lê Quang Mạnh"
        style="@style/TextMediumBlackCommon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDuty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Thủ trưởng"
        style="@style/TextSmallBlackCommon"
        app:layout_constraintLeft_toRightOf="@id/tvNameStaff"
        app:layout_constraintTop_toTopOf="@id/tvNameStaff"
        app:layout_constraintBottom_toBottomOf="@id/tvNameStaff"
        android:layout_marginLeft="8dp"
        />
    <TextView
        android:id="@+id/tvDescWorkFlow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvNameStaff"
        style="@style/TextSmallBlackCommon"
        android:text="Lãnh đạo giao việc"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="4dp"
        />

    <TextView
        android:id="@+id/tvTimeHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextSmallestBlackCommon"
        android:text="28/05/2018 - 15:38:35 "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescWorkFlow"
        android:layout_marginTop="2dp"
        />
</android.support.constraint.ConstraintLayout>