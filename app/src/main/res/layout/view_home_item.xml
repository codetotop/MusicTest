<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="?android:attr/selectableItemBackground"
  android:gravity="center_horizontal"
  android:padding="40dp"
  android:orientation="vertical">

  <ImageView
    android:id="@+id/iv_view_home_item_icon"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:src="@drawable/ic_close"/>

  <Button
    android:id="@+id/btn_view_home_item_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="17dp"
    android:background="@drawable/common_rounded_background_selector"
    android:gravity="center"
    android:paddingBottom="40dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingTop="40dp"
    android:textColor="@color/commonBtnTextColor"
    android:textSize="33dp"
    tools:ignore="SpUsage"
    tools:text="Driver check in"/>
</LinearLayout>