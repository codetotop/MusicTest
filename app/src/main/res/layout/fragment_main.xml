<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentmain_dl_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.gem.mpi.widget.ToolbarView
            android:id="@+id/fragmentmain_tv_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/container_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragmentmain_cl_slide_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorWhite"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <com.gem.mpi.widget.ProfileView
            android:id="@+id/viewslidemenu_pv_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/small_space"
            android:layout_marginStart="@dimen/small_space"
            android:layout_marginTop="@dimen/small_space"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:profileview_avatar="@mipmap/ic_launcher"
            app:profileview_department="@string/profile_exam_department"
            app:profileview_duty="@string/profile_exam_duty"
            app:profileview_name="@string/profile_exam_name" />

        <View
            android:id="@+id/viewslidemenu_v_divider_profile"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/small_space"
            android:background="@color/color_divider_gray"
            app:layout_constraintTop_toBottomOf="@id/viewslidemenu_pv_profile" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/viewslidemenu_rv_slide_menu_item"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/medium_space"
            android:layout_marginTop="@dimen/small_space"
            app:layout_constraintBottom_toTopOf="@+id/viewslidemenu_btn_logout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewslidemenu_v_divider_profile" />

        <Button
            android:id="@+id/viewslidemenu_btn_logout"
            style="@style/ButtonCommon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_space"
            android:layout_marginEnd="@dimen/small_space"
            android:layout_marginStart="@dimen/small_space"
            android:text="@string/logout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.DrawerLayout>
